@page "/demohotel"
@using Models

<h3>We will display hotel rooms and amenitites here!</h3>
<div class="border p-2 mt-2" style="background-color:azure">
    <h2 class="text-info">Rool List [USING COMPONENT]</h2>
    <div class="row container">
        <div class="col-12">
            <h4 class="text-info">Hotel Room's'</h4>
            <span>Room Selected - @SelectedRooms</span>
        </div>
        @foreach(var room in RoomsList)
        {
            <IndividualRoom room="@room" OnRoomCheckBoxSelectionChanged="RoomSelectionCounterChanged" />
        }

        <div class="col-12 mt-4">
            <h4 class="text-info">Hotel Amenitie's [assignment]</h4>
        </div>
        @foreach(var amenity in AmenitiesList)
        {
            <IndividualAmenities Amenities="@amenity" OnAmenitySelection="AmenitySelectionCounterChanged" >
                <FirstFragment>#1</FirstFragment>
                <SecondFragment>#2</SecondFragment>
            </IndividualAmenities>
        }
    </div>
    <div class="col-12">
        <p class="text-secondary">Selected Amenity : @SelectedAmenity</p>
    </div>

</div>


@code {


    public int SelectedRooms { get; set; } = 0;
    public string SelectedAmenity { get; set; } = "";
    List<BlazorRoom> RoomsList = new List<BlazorRoom>();
    List<BlazorAmenities> AmenitiesList = new List<BlazorAmenities>();

    protected override void OnInitialized()
    {
        base.OnInitialized();

        RoomsList.Add(new BlazorRoom()
            {
                Id = 201,
                RoomName = "Villa Room 201",
                IsActive = true,
                Price = 499,
                RoomProps = new List<BlazorRoomProp>()
            {
                new BlazorRoomProp(){Id=1,Name="TV",Value="Yes"},
                new BlazorRoomProp(){Id=2,Name="AC",Value="Yes"},
                new BlazorRoomProp(){Id=3,Name="Wifi",Value="Yes"},
                new BlazorRoomProp(){Id=4,Name="Breakfast",Value="Yes"}
            }

            });

        RoomsList.Add(new BlazorRoom()
            {
                Id = 301,
                RoomName = "Villa Room 301",
                IsActive = true,
                Price = 699,
                RoomProps = new List<BlazorRoomProp>()
            {
                new BlazorRoomProp(){Id=1,Name="TV",Value="Yes"},
                new BlazorRoomProp(){Id=2,Name="AC",Value="Yes"},
                new BlazorRoomProp(){Id=3,Name="Wifi",Value="Yes"},
                new BlazorRoomProp(){Id=4,Name="Breakfast",Value="Yes"}
            }

            });
        AmenitiesList.Add(new BlazorAmenities()
        {
            Id = 1,
            Name = "TV",
            Description = "Television"
        });
        AmenitiesList.Add(new BlazorAmenities()
        {
            Id = 2,
            Name = "AC",
            Description = "Air Conditioner"
        });
        AmenitiesList.Add(new BlazorAmenities()
        {
            Id = 3,
            Name = "Wifi",
            Description = "Wireless Internet"
        });

    }

    protected void RoomSelectionCounterChanged(bool isRoomSelected)
    {
        if (isRoomSelected)
        {
            SelectedRooms++;
        }
        else
        {
            SelectedRooms--;
        }
    }

    protected void AmenitySelectionCounterChanged(string amenityName)
    {
        SelectedAmenity = amenityName;
    }

}

